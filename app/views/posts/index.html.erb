<h1>Posts</h1>

<%= render 'posts/search_form' %>

<%= link_to 'New Post', new_post_path %><br/>

<% Category.all.each do |category| %>

  <h3><%= category.name.capitalize %></h3>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Posted at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% category.recent_posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.to_s %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user == post.user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
<% end %>
